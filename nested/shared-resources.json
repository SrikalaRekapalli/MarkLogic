{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
     "location": {
            "type": "string",
            "defaultValue": "eastus",
            "metadata": {
                "description": "Deployment location"
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "metadata": {
                "description": "Stoarge Account Type"
            }
        },
        "storageApiVersion": {
            "type": "string",
            "defaultValue": "2015-06-15",
            "metadata": {
                "description": "API Version for the Storage Account"
            }
        },
         "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Storage Account Name"
            }
        },
        "count": {
            "type": "int"
        }
    
  },
 "variables": {
        "storageAccountName": "[parameters('storageAccountName')]",
        "storageApiVersion": "[parameters('storageApiVersion')]",
        "storageAccountType": "[parameters('storageAccountType')]",
        "storageAccName": "[concat(variables('storageAccountName'),uniqueString(resourceGroup().id))]",
        "storageAccountUrl": "https://raw.githubusercontent.com/sysgain/MarkLogic/marklogicDev1/nested/multipleStorageAccounts.json"
         },

  "resources": [
    {
            "name": "storageAccountDeployment",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('storageAccountUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "storageApiVersion": {
                        "value": "[variables('storageApiVersion')]"
                    },
                    "storageAccountType": {
                        "value": "[variables('storageAccountType')]"
                    },
                    "storageAccountName": {
                        "value": "[variables('storageAccName')]"
                    }
               
                }
            }
        }

  ]
}
