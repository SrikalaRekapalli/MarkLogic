{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nodeNetworkSettings": {
      "type": "object",
      "metadata": {
        "description": "Network settings object"
      }
    }
  },
  "variables": {
    "location": "[parameters('nodeNetworkSettings').location]",
    "count": "[parameters('nodeNetworkSettings').count]",
    "networkApiVersion": "[parameters('nodeNetworkSettings').networkApiVersion]",
    "publicIPAddressName": "[parameters('nodeNetworkSettings').publicIPAddressName]",
    "publicIPdnsPrefix": "[parameters('nodeNetworkSettings').publicIPdnsPrefix]"

  },
  "resources": [
    {
      "comments": "Public IP Address multiple Resource",
      "apiVersion": "[variables('networkApiVersion')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[concat(variables('publicIPAddressName'),'-',copyIndex())]",
      "location": "[variables('location')]",
      "copy": {
        "name": "publicIPLoop",
        "count": "[variables('count')]"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(variables('publicIPdnsPrefix'),copyIndex())]"
        }
      }
    }
  ]
}
