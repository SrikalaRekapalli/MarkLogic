{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location"
            }
        },
        "nodeCount": {
            "type": "int",
            "defaultValue": 3,
            "metadata": {
                "description": "Number of Nodes in the Multi Node Cluster (Multi Node). Minimum 3 Nodes and Maximum 10 Nodes"
            }
        },
        "storageApiVersion": {
            "type": "string",
            "defaultValue": "2015-06-15",
            "metadata": {
                "description": "API Version for the Storage Account"
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Unique namespace for the Storage Account"
            }
        },

        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Type of the Data Disk that is going to be attached. Standard or Premium"
            }
        }
    },
    "variables": {
        "saCount":"[parameters('nodeCount')]",
        "sharedTemplateUrl": "https://raw.githubusercontent.com/sysgain/MarkLogic/marklogicDev1/nested/shared-resources.json"
    },
    "resources": [
        {
            "name": "shared-resources",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('sharedTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountType": {
                         "value": "[parameters('storageAccountType')]"
                    },
                    "storageApiVersion": {
                       "value": "[parameters('storageApiVersion')]"
                    },
                    "location": {
                       "value": "[parameters('location')]"
                    },
                    
                    "storageAccountName": {
                      "value": "[parameters('storageAccountName')]"
                    },
                    "count": {
                        "value": "[variables('saCount')]"
                    }
                }
            }
        }
    ]
}
